<Window x:Class="JsonSerializationPrac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonSerializationPrac"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Select Platform" HorizontalAlignment="Left" Margin="93,35,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboPlatform" HorizontalAlignment="Left" Margin="93,66,0,0" VerticalAlignment="Top" Width="142" Height="38" SelectionChanged="cboPlatform_SelectionChanged"/>
        <ListBox x:Name="lstGames" Margin="0,156,0,0" Background="#FFA2EC94" MouseDoubleClick="ShowGameInfo"/>
        <Label x:Name="lblCount" Content="Label" HorizontalAlignment="Left" Margin="381,116,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="636,48,0,0" VerticalAlignment="Top" Height="50" Width="62" Click="btnExport_Click"/>

    </Grid>
</Window>
