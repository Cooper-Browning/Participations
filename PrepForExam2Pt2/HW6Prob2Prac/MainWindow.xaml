<Window x:Class="HW6Prob2Prac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW6Prob2Prac"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboCountry" HorizontalAlignment="Left" Margin="48,37,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lstWines" Margin="0,142,0,0" Background="#FFF1C2C2" MouseDoubleClick="WineInfo"/>
        <Button x:Name="Filter" Content="Filter" HorizontalAlignment="Left" Margin="432,37,0,0" VerticalAlignment="Top" Height="35" Width="70" Click="Filter_Click"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="279,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="263,48,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFCEF1C8"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="560,25,0,0" VerticalAlignment="Top" Height="41" Width="76" Click="btnExport_Click"/>

    </Grid>
</Window>
