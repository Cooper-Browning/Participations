@model Homework9Prac.Models.Director

@{
    ViewBag.Title = "Info";
}

<h2>Info</h2>

<div>
    <h4>Director @Model.Director_Name</h4>
    <hr />

    Movies directed include:
    @foreach (var item in Model.Movies)
    {
        if (item.director_id.ToString() == Model.Director_Id.ToString())
        {
            <li><a target="_blank" href="@item.movie_imdb_link">@item.movie_title</a> that came out in @item.title_year</li>
        }
    }

</div>
<p>

    @Html.ActionLink("Back to List", "Index")
</p>
