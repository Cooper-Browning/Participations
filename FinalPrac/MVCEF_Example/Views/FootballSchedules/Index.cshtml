@model IEnumerable<MVCEF_Example.Models.FootballSchedule>

@{
    ViewBag.Title = "Index";
}

<h2>OU Football Schedule</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opponent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHomeGame)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.IsHomeGame)
        {
            <tr class="home">
                <td>
                    @Html.DisplayFor(modelItem => item.Season)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opponent)
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHomeGame)
                </td>

            </tr>
        }
        else
        {
            <tr class="away">
                <td>
                    @Html.DisplayFor(modelItem => item.Season)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opponent)
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHomeGame)
                </td>

            </tr>
        }

    }

</table>
