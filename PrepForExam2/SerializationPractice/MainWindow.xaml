<Window x:Class="SerializationPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerializationPractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cboGame" HorizontalAlignment="Left" Margin="66,37,0,0" VerticalAlignment="Top" Width="137" Height="33" SelectionChanged="cboGame_SelectionChanged" IsSynchronizedWithCurrentItem="True"/>
        <ListBox x:Name="lstGames" Margin="0,112,0,0" Background="#FFABF6F6" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
